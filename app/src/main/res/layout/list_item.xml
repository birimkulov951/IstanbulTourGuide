<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/text_container">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

   <ImageView
       android:id="@+id/place_image"
       android:layout_width="140dp"
       android:layout_height="90dp"
       tools:ignore="ContentDescription" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:paddingLeft="16dp"
          tools:ignore="RtlHardcoded,RtlSymmetry">

         <TextView
             android:id="@+id/place_name"
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="1"
             android:gravity="bottom"
             android:textAppearance="?android:textAppearanceMedium"
             android:textColor="@android:color/black"
             android:textStyle="bold"
             tools:text="Location Name" />

         <TextView
             android:id="@+id/place_district"
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="1"
             android:gravity="top"
             android:textAppearance="?android:textAppearanceMedium"
             android:textColor="@android:color/darker_gray"
             tools:text="DistrictInfo" />
      </LinearLayout>

   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
      <ImageView
          android:id="@+id/info_image"
          android:layout_marginTop="16dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/baseline_info_black_24"
          android:visibility="gone"/>
      <TextView
          android:layout_marginStart="10dp"
          android:layout_marginTop="16dp"
          android:id="@+id/place_info"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="information"
          android:visibility="gone"/>

   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
      <ImageView
          android:id="@+id/location_image"
          android:layout_marginTop="16dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/baseline_location_on_black_24"
          android:visibility="gone"/>
      <TextView
          android:id="@+id/place_address"
          android:layout_marginStart="10dp"
          android:layout_marginTop="16dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Location"
          android:visibility="gone"
          android:textColor="@android:color/holo_blue_light"/>
   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
      <ImageView
          android:id="@+id/call_image"
          android:layout_marginTop="16dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/baseline_call_black_24"
          android:visibility="gone"/>
      <TextView
          android:id="@+id/place_call_number"
          android:layout_marginStart="10dp"
          android:layout_marginTop="16dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Call Number"
          android:visibility="gone"
          android:textColor="@android:color/holo_blue_light"/>
   </LinearLayout>

</LinearLayout>